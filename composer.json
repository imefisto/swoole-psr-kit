{
  "name": "imefisto/swoole-psr-kit",
  "description": "A PSR-compliant toolkit for building Swoole HTTP/WebSocket servers with dependency management",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ignacio",
      "email": "imefisto@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3",
    "psr/container": "^2.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "league/route": "^5.0",
    "imefisto/psr-swoole-native": "^1.0",
    "php-di/php-di": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Imefisto\\SwooleKit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Imefisto\\SwooleKit\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "static-analysis": "phpstan analyse src tests"
  },
  "config": {
    "sort-packages": true
  }
}
